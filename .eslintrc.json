{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "airbnb-base",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "linebreak-style": ["error", "windows"],
      "no-console": "off",
      "no-use-before-define": "off",
      "global-require": "off",
      "arrow-parens": "off",
      "no-multi-assign": "off",
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "quotes": ["error", "single"],
      "comma-dangle": ["error", "never"],
      "no-underscore-dangle": "off"
    }
  }  